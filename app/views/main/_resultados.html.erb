            <div class="col-lg-3 col-md-6 col-sm-6">
              <div class="card card-stats">
                <div class="card-header card-header-warning card-header-icon">
                  <div class="card-icon">
                    <i class="material-icons">Pension probable</i>
                  </div>
                  <p class="card-category">Sueldo</p>
                  <h3 class="card-title">

                    <b>$<%= @sueldoEsperado.to_i  %></b><br> Basandose en una rentabilidad estandar
                    
                  </h3>
                </div>
                <div class="card-footer">
                  
                </div>
              </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-6">
